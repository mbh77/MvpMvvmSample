<Window x:Class="Presenter.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presenter.Views"
        xmlns:locators="clr-namespace:MvpMvvm.Locators;assembly=MvpMvvm"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ObjectDataProvider x:Key="ViewModelProvider" 
                            ObjectType="{x:Type locators:ViewModelLocator}" 
                            MethodName="GetViewModel">
            <ObjectDataProvider.MethodParameters>
                <sys:String>MainWindowViewModel</sys:String>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <Window.DataContext>
        <Binding Source="{StaticResource ViewModelProvider}" />
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <Button Content="Change View" Command="{Binding ChangeViewCommand}" />
            <ContentControl Content="{Binding MainRegion}" ContentTemplateSelector="{StaticResource ViewLocator}" />
            <TextBlock Text="{Binding MainWindowText}" />
            <Button Content="Show Dialog" Command="{Binding ShowDialogCommand}" />
        </StackPanel>
    </Grid>
</Window>
